<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalB.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="https://th.bing.com/th/id/OIP.q928lWe-1Pn2T8ghNLPZJQHaHa?w=216;h=216;c=7;o=5;dpr=1.3;pid=1.7"
                SemanticProperties.Description="Code Eat Sleep Repeat"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Christian Bayili"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text=" CSCI 4650 Final Part B"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to Christian Bayili module 8"
                FontSize="22"
                HorizontalOptions="Center" />

            <Button
                Text="Visite Nasa Website"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnVisitWebsiteClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

